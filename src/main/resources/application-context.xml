<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="car" class="com.vijay.learn.springcore.di.Car">
        <property name="name" value="Sudan" />
        <property name="perDayCost" value="2000" />
    </bean>

    <bean id="user" class="com.vijay.learn.springcore.di.User">
        <property name="userName" value="Vijay Gupta" />
        <constructor-arg ref="car" /><!--Constructor based injection-->
        <!-- <property name="car" ref="car" />--><!-- Setter based injection-->
    </bean>

    <bean id="student" class="com.vijay.learn.springcore.di.Student">
        <property name="name" value="Amar Singh" />
        <property name="id" value="454555" />
        <property name="hostel" ref="hostel" /><!-- Setter based injection-->
    </bean>

    <bean id="hostel" class="com.vijay.learn.springcore.di.Hostel">
        <property name="city" value="Mumbai"/>
        <property name="hostelName" value="Late Bhausaheb Hiray's Trust"/>
    </bean>

<!--    inner bean example- generally we do not use it-->
    <bean id="studentInnerBean" class="com.vijay.learn.springcore.di.Student">
        <property name="name" value="Amar Singh" />
        <property name="id" value="454555" />
        <property name="hostel">
            <bean id="hostelInnerBean" class="com.vijay.learn.springcore.di.Hostel">
                <property name="city" value="INNER BEAN - Mumbai"/>
                <property name="hostelName" value="INNER BEAN - Late Bhausaheb Hiray's Trust"/>
            </bean>
        </property>
    </bean>

    <alias name="student" alias="student_alias"/>

    <bean id="studentIdRef" class="com.vijay.learn.springcore.di.Student">
<!--        <property name="name" value="Amar Singh" />-->
        <property name="id" value="454555" />
        <property name="hostel" ref="hostel" /><!-- Setter based injection-->
        <property name="name">
            <idref bean="hostel"/>
        </property>
    </bean>

    <bean id="collectionsDI" class="com.vijay.learn.springcore.di.CollectionsDI">
        <property name="listOfStudents">
            <list>
                <value>Vijay Gupta</value>
                <value>Amar Singh</value>
                <value>Amit Singh</value>
            </list>
        </property>
    </bean>

    <bean id="beanLifeCycleXML" class="com.vijay.learn.springcore.beanlifecycle.BeanLifeCycleXML" init-method="init" destroy-method="destroy" />
    <bean id="beanLifeCycleInterface" class="com.vijay.learn.springcore.beanlifecycle.BeanLifeCycleInterface" />

    <bean id="beanScope" class="com.vijay.learn.springcore.scope.BeanScope" scope="prototype"/>
</beans>
